{
    "$id": "https://github.com/LinasBeres/moto-maintenance-db/blob/main/schema/maintence.schema.json",
    "title": "Motorcycle Maitence",
    "description": "Motorcycle maitence information and details",
    "type": "object",
    "definitions": {
        "TireSchema": {
            "type": "object",
            "properties": {
                "size": {
                    "description": "size of tire in the standard width/aspect ratio",
                    "type": "string"
                },
                "diameter": {
                    "description": "diameter of the tire",
                    "type": "integer"
                },
                "construction": {
                    "description": "tire construction, can be blank or none",
                    "type": "string"
                },
                "load_index": {
                    "description": "load index",
                    "type": "integer"
                },
                "speed_rating": {
                    "description": "speed rating",
                    "type": "string"
                },
                "bar": {
                    "description": "pressure in bar",
                    "type": "number"
                },
                "psi": {
                    "description": "pressure in psi",
                    "type": "number"
                }
            },
            "required": ["size", "diameter", "load_index", "speed_rating", "bar", "psi"]
        },
        "LengthSchema": {
            "type": "object",
            "properties": {
                "m": { "type": "number" },
                "ft": { "type": "number" }
            },
            "required": ["m"]
        },
        "SmallLengthSchema": {
            "type": "object",
            "properties": {
                "mm": { "type": "number" },
                "in": { "type": "number" }
            },
            "required": ["mm"]
        },
        "WeightSchema": {
            "type": "object",
            "properties": {
                "kg": { "type": "number" },
                "lb": { "type": "number" }
            },
            "required": ["kg"]
        },
        "VolumeSchema": {
            "type": "object",
            "properties": {
                "l": { "type": "number" },
                "US_gal": { "type": "number" },
                "imp_gal": { "type": "number" }
            },
            "required": ["l"]
        },
        "SmallVolumeSchema": {
            "type": "object",
            "properties": {
                "ml": { "type": "number" },
                "US_qt": { "type": "number" },
                "imp_qt": { "type": "number" }
            },
            "required": ["ml"]
        },
        "YearSchema": {
            "type": "object",
            "properties": { "years": { "type": "integer" } },
            "required": ["years"]
        },
        "DistanceSchema": {
            "type": "object",
            "properties": {
                "km": { "type": "integer" },
                "miles": { "type": "integer" }
            },
            "required": ["km"]
        },
        "InspectReplaceSchema": {
            "type": "object",
            "properties": {
                "inspect": { "$ref": "#/definitions/DistanceSchema" },
                "replace": { "$ref": "#/definitions/DistanceSchema" }
            }
        },
        "ReplaceYearsSchema": {
            "type": "object",
            "properties": { "replace": { "$ref": "#/definitions/YearSchema" } }
        }
    },
    "properties": {
        "model": {
            "description": "Brand that makes the said motorcycle, e.g. Honda or Triumph",
            "type": "string"
        },
        "make": {
            "description": "Bike model, e.g. DL650 VStrom",
            "type": "string"
        },
        "years": {
            "description": "Year(s) of the bike, seperated with a dash",
            "type": "string"
        },
        "tires": {
            "type": "object",
            "properties": {
                "front": { "$ref": "#/definitions/TireSchema" },
                "back": { "$ref": "#/definitions/TireSchema" }
            },
            "required": ["front", "back"]
        },
        "vin_location": {
            "description": "list of where to find the VIN",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minContains": 1
        },
        "fuel": {
            "description": "type of fuel the bike accepts",
            "type": "object",
            "properties": {
                "RON": {
                    "description": "quality in terms of RON",
                    "type": "integer"
                },
                "AKI": {
                    "description": "quality in terms of AKI, mostly North America",
                    "type": "integer"
                },
                "ethanol": {
                    "description": "Max percentage of fuel that can be ethanol",
                    "type": "number"
                },
                "methanol": {
                    "description": "Max percentage of fuel that can be ethanol",
                    "type": "number"
                }
            },
            "required": ["RON", "AKI", "ethanol", "methanol"]
        },
        "engine_oil": {
            "description": "Type of oil that the engine takes and how much",
            "type": "object",
            "properties": {
                "rated": {
                    "description": "Engine oil rating",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "viscosity": {
                    "description": "engine oil; viscosity rating",
                    "type": "string"
                }
            },
            "required": ["rated", "viscosity"]
        },
        "brake_fluid": {
            "description": "Type of brake fluid the bike requires",
            "type": "string"
        },
        "fork_oil": {
            "description": "Type of fork oil the bike takes",
            "type": "string"
        },
        "specification": {
            "desciprtion": "Basic specification of the motorcycle",
            "type": "object",
            "properties": {
                "dimensions": {
                    "type": "object",
                    "properties": {
                        "length": { "$ref": "#/definitions/SmallLengthSchema" },
                        "width": { "$ref": "#/definitions/SmallLengthSchema" },
                        "seat_height": { "$ref": "#/definitions/SmallLengthSchema" },
                        "wheelbase": { "$ref": "#/definitions/SmallLengthSchema" },
                        "ground_clearance": { "$ref": "#/definitions/SmallLengthSchema" },
                        "dry_mass": { "$ref": "#/definitions/WeightSchema" }
                    },
                    "required": ["length", "width", "seat_height", "wheelbase", "ground_clearance", "dry_mass" ]
                },
                "engine": {
                    "description": "Engine specifications",
                    "type": "object",
                    "properties": {
                        "type": {
                            "description": "type of engine inside the bike",
                            "type": "string"
                        },
                        "num_cylinders": { "type": "integer" },
                        "bore": { "$ref": "#/definitions/SmallLengthSchema" },
                        "stroke": { "$ref": "#/definitions/SmallLengthSchema" },
                        "displacement": {
                            "type": "object",
                            "properties": {
                                "cm3": { "type": "number" },
                                "cu.in": { "type": "number" }
                            },
                            "required": ["cm3"]
                        },
                        "carburetion": { "type": "string" },
                        "air_cleaner": { "type": "string" },
                        "starter_system": { "type": "string" },
                        "lubrication": { "type": "string" },
                        "idle_speed": {
                            "type": "object",
                            "properties": {
                                "average": { "type": "number" },
                                "variance": { "type": "number" }
                            },
                            "required": ["average", "variance"]
                        }
                    },
                    "required": [
                        "type", "num_cylinders", "bore",
                        "stroke", "displacement", "carburetion",
                        "air_cleaner", "starter_system", "lubrication",
                        "idle_speed"
                    ]
                },
                "drive_train": {
                    "type": "object",
                    "properties": {
                        "clutch": { "type": "string" },
                        "transmission": { "type": "string" },
                        "gearshift_pattern": { "type": "string" },
                        "primary_reduction_ratio": { "type": "number" },
                        "final_reduction_ratio": { "type": "number" },
                        "gear_ratios": {
                            "type": "object",
                            "properties": {
                                "low": { "type": "number" },
                                "2nd": { "type": "number" },
                                "3rd": { "type": "number" },
                                "4th": { "type": "number" },
                                "5th": { "type": "number" },
                                "top": { "type": "number" }
                            },
                            "required": ["low", "top"]
                        },
                        "drive_chain": { "type": "string" }
                    },
                    "required": ["transmission"]
                },
                "chassis": {
                    "type": "object",
                    "properties": {
                        "front_suspension": { "type": "string" },
                        "rear_suspension": { "type": "string" },
                        "front_fork_stroke": { "$ref": "#/definitions/SmallLengthSchema" },
                        "rear_wheel_travel": { "$ref": "#/definitions/SmallLengthSchema" },
                        "caster": { "type": "number" },
                        "trail": { "$ref": "#/definitions/SmallLengthSchema" },
                        "steering_angle": {
                            "type": "object",
                            "properties": {
                                "left": { "type": "number" },
                                "right": { "type": "number" }
                            },
                            "required": ["left", "right"]
                        },
                        "turning_radius": { "$ref": "#/definitions/LengthSchema" },
                        "front_brake": { "type": "string" },
                        "rear_brake": { "type": "string" },
                        "front_tire_size": { "type": "string" },
                        "rear_tire_size": { "type": "string" }
                    },
                    "required": [
                        "front_suspension", "rear_suspension", "front_fork_stroke",
                        "rear_wheel_travel", "caster", "trail",
                        "steering_angle", "turning_radius", "front_brake",
                        "rear_brake", "front_tire_size", "rear_tire_size"
                    ]
                },
                "electrical": {
                    "type": "object",
                    "properties": {
                        "ignition_type": { "type": "string" },
                        "ignition_timing": { "type": "string" },
                        "spark_plug": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "minContains": 1
                        },
                        "battery": { "type": "string" },
                        "generator": { "type": "string" },
                        "main_fuse": { "type": "integer" },
                        "fuse": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            },
                            "minContains": 1
                        },
                        "headlight": { "type": "string" },
                        "position_light": { "type": "string" },
                        "brake_light": { "type": "string" },
                        "license_plate_light": { "type": "string" },
                        "turn_signal_light": { "type": "string" },
                        "speedometer_light": { "type": "string" },
                        "turn_signal_indicator_light": { "type": "string" },
                        "neutral_indicator_light": { "type": "string" },
                        "high_beam_indicator_light": { "type": "string" },
                        "instrument_lights": { "type": "string" },
                        "fuel_injection_warning_light": { "type": "string" }
                    },
                    "required": [
                        "ignition_type", "ignition_timing", "spark_plug",
                        "battery", "generator", "main_fuse",
                        "fuse", "headlight", "position_light"
                    ]
                },
                "capacities": {
                    "type": "object",
                    "properties": {
                        "fuel_tank": { "$ref": "#/definitions/VolumeSchema" },
                        "engine_oil": {
                            "type": "object",
                            "properties": {
                                "oil_change": { "$ref": "#/definitions/SmallVolumeSchema" },
                                "with_filter_change": { "$ref": "#/definitions/SmallVolumeSchema" },
                                "overhaul": { "$ref": "#/definitions/SmallVolumeSchema" }
                            },
                            "required": ["oil_change"]
                        },
                        "coolant": { "$ref": "#/definitions/VolumeSchema" }
                    },
                    "required": ["fuel_tank", "engine_oil", "coolant"]
                }
            },
            "required": [
                "dimensions", "engine", "drive_train", "chassis", "electrical", "capacities"
            ]
        },
        "periodic_maintence": {
            "type": "object",
            "properties": {
                "air_filter": { "$ref": "#/definitions/InspectReplaceSchema" },
                "valve_clearance": { "$ref": "#/definitions/InspectReplaceSchema" },
                "spark_plug": { "$ref": "#/definitions/InspectReplaceSchema" },
                "engine_oil": { "$ref": "#/definitions/InspectReplaceSchema" },
                "oil_filter": { "$ref": "#/definitions/InspectReplaceSchema" },
                "idle_speed": { "$ref": "#/definitions/InspectReplaceSchema" },
                "throttle_cable_play": { "$ref": "#/definitions/InspectReplaceSchema" },
                "engine_coolant": { "$ref": "#/definitions/ReplaceYearsSchema" },
                "radiator_hoses": { "$ref": "#/definitions/ReplaceYearsSchema" },
                "brake_hose": { "$ref": "#/definitions/ReplaceYearsSchema" },
                "brake_fluid": { "$ref": "#/definitions/ReplaceYearsSchema" }
            },
            "required": []
        },
        "lubrication_points": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minContains": 1
        },
        "maintence": {
        },
        "torque_values": {
            "description": "Information for all torque values on the bike",
            "type": "object",
            "properties": {},
            "required": []
        }
    },
    "required": [
        "model",
        "make",
        "years",
        "tires",
        "vin_location",
        "fuel",
        "engine_oil",
        "brake_fluid",
        "fork_oil",
        "specification",
        "lubrication_points",
        "maintence",
        "torque_values"
    ]
}
